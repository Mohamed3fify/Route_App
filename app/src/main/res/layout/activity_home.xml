<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:scrollbars="vertical"
    tools:context=".HomeActvity"
    android:background="@color/white">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TextView
            android:id="@+id/bar"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintEnd_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:text="RouteAppOne"
            android:background="#002b6a"
            android:textColor="@color/white"
            android:padding="20dp"
            android:textSize="20sp"
            android:textStyle="bold"/>
        <ImageView
            android:id="@+id/android_image"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:adjustViewBounds="true"
            android:src="@drawable/android"
            app:layout_constraintTop_toBottomOf="@id/bar"
            android:layout_margin="18dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:paddingHorizontal="15dp"
            />
        <Button
            android:id="@+id/android_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#104ad2"
            app:layout_constraintTop_toBottomOf="@id/android_image"
            app:layout_constraintStart_toStartOf="@id/android_image"
            android:text="Android Course"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:layout_marginHorizontal="15dp"
            android:layout_marginTop="5dp"/>

        <ImageView
            android:id="@+id/ios_image"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:adjustViewBounds="true"
            android:src="@drawable/ios"
            app:layout_constraintTop_toBottomOf="@id/android_button"
            android:layout_margin="18dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:paddingHorizontal="15dp"
            />

        <Button
            android:id="@+id/ios_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#104ad2"
            app:layout_constraintTop_toBottomOf="@id/ios_image"
            app:layout_constraintStart_toStartOf="@id/ios_image"
            android:text="IOS Course"
            android:textSize="20sp"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="@id/android_image"
            android:layout_marginHorizontal="15dp"
            android:layout_marginTop="5dp"
            />

        <ImageView
            android:id="@+id/full_stack_image"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:adjustViewBounds="true"
            android:src="@drawable/fullstack"
            app:layout_constraintTop_toBottomOf="@id/ios_button"
            android:layout_margin="18dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:paddingHorizontal="15dp"
            />
        <Button
            android:id="@+id/full_stack_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#104ad2"
            app:layout_constraintTop_toBottomOf="@id/full_stack_image"
            app:layout_constraintStart_toStartOf="@id/full_stack_image"
            android:text="Full Stack Course"
            android:textColor="@color/white"
            android:layout_marginHorizontal="15dp"
            android:layout_marginTop="5dp"
            android:textSize="20sp"
           />


    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>